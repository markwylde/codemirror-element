{
  "name": "codemirror-element",
  "version": "1.1.5",
  "type": "module",
  "description": "The codemirror editor wrapped in a custom element",
  "main": "src/index.js",
  "scripts": {
    "build": "cp src/index.html dist/index.html && esbuild --bundle src/index.js --outfile=dist/CodeMirrorEditor.js --loader:.ttf=file --minify --sourcemap",
    "start": "cp src/index.html dist/index.html && esbuild --servedir=dist --bundle src/index.js --outfile=dist/CodeMirrorEditor.js --loader:.ttf=file --minify --sourcemap",
    "test": "node test/"
  },
  "keywords": [],
  "author": {
    "email": "me@markwylde.com",
    "name": "Mark Wylde",
    "url": "https://github.com/markwylde"
  },
  "license": "MIT",
  "dependencies": {
    "@codemirror/commands": "^6.2.1",
    "@codemirror/lang-javascript": "^6.1.4",
    "@codemirror/lint": "^6.2.0",
    "@codemirror/state": "^6.2.0",
    "@codemirror/theme-one-dark": "^6.1.1",
    "@codemirror/view": "^6.9.1",
    "codemirror": "^6.0.1",
    "eslint-linter-browserify": "^8.35.0"
  },
  "devDependencies": {
    "esbuild": "^0.17.11",
    "eslint": "^8.35.0",
    "eslint-config-standard": "^17.0.0",
    "just-tap": "^2.4.0",
    "puppeteer": "^19.7.3",
    "servatron": "^2.4.3"
  }
}
